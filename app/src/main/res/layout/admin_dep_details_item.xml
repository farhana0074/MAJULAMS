<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app2="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical"
    app:ignore="NamespaceTypo">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtI_Dep_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:padding="5dip"
                android:text="Department Name"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_HL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDarkTR"
                android:gravity="center"
                android:padding="4dip"
                android:text="Half Leaves"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp" />

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="165dp"
                    android:layout_height="match_parent"
                    android:background="@color/LightGray"
                    android:padding="4dip"
                    android:paddingStart="18dip"
                    android:text="Pending "
                    android:textColor="@color/DarkerGray"
                    android:textSize="16sp"
                    card_view:layout_constraintStart_toStartOf="parent"
                    card_view:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="165dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimaryTR"
                    android:padding="4dip"
                    android:paddingStart="18dip"
                    android:text="Processed by HoD"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    card_view:layout_constraintBottom_toBottomOf="parent"
                    card_view:layout_constraintStart_toStartOf="parent"
                    card_view:layout_constraintTop_toBottomOf="@+id/textView5" />


                <TextView
                    android:id="@+id/tv_pending_HL"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:padding="4dip"
                    android:paddingStart="18dip"
                    android:text="Total "
                    android:textColor="@color/DarkerGray"
                    android:textSize="16sp"
                    card_view:layout_constraintEnd_toEndOf="parent"
                    card_view:layout_constraintHorizontal_bias="0.0"
                    card_view:layout_constraintStart_toEndOf="@+id/textView5"
                    card_view:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_processed_HL"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:padding="4dip"
                    android:paddingStart="18dip"
                    android:text="Total"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    card_view:layout_constraintBottom_toBottomOf="parent"
                    card_view:layout_constraintEnd_toEndOf="parent"
                    card_view:layout_constraintHorizontal_bias="0.0"
                    card_view:layout_constraintStart_toEndOf="@+id/textView7"
                    card_view:layout_constraintTop_toBottomOf="@+id/tv_pending_HL" />

            </android.support.constraint.ConstraintLayout>

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDarkTR"
                android:gravity="center"
                android:padding="4dip"
                android:text="Full Leaves"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toBottomOf="@+id/tv_pending_HL" />

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="165dp"
                    android:layout_height="match_parent"
                    android:background="@color/LightGray"
                    android:padding="4dip"
                    android:paddingStart="18dip"
                    android:text="Pending "
                    android:textColor="@color/DarkerGray"
                    android:textSize="16sp"
                    card_view:layout_constraintStart_toStartOf="parent"
                    card_view:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_pending_FL"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:padding="4dip"
                    android:paddingStart="18dip"
                    android:text="Total "
                    android:textColor="@color/DarkerGray"
                    android:textSize="16sp"
                    card_view:layout_constraintEnd_toEndOf="parent"
                    card_view:layout_constraintHorizontal_bias="0.0"
                    card_view:layout_constraintStart_toEndOf="@+id/textView8"
                    card_view:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/tv_processed_FL"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:padding="4dip"
                    android:paddingStart="18dip"
                    android:text="Total"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    card_view:layout_constraintBottom_toBottomOf="parent"
                    card_view:layout_constraintEnd_toEndOf="parent"
                    card_view:layout_constraintHorizontal_bias="0.0"
                    card_view:layout_constraintStart_toEndOf="@+id/textView10"
                    card_view:layout_constraintTop_toBottomOf="@+id/tv_pending_FL" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="165dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimaryTR"
                    android:padding="4dip"
                    android:paddingStart="18dip"
                    android:text="Processed by HoD"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    card_view:layout_constraintBottom_toBottomOf="parent"
                    card_view:layout_constraintStart_toStartOf="parent"
                    card_view:layout_constraintTop_toBottomOf="@+id/textView8"
                    card_view:layout_constraintVertical_bias="0.0" />


            </android.support.constraint.ConstraintLayout>

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDarkTR"
                android:gravity="center"
                android:padding="4dip"
                android:text="Leaves Without Pay"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintHorizontal_bias="0.0"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toBottomOf="@+id/tv_pending_FL" />

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="165dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimaryTR"
                    android:padding="4dip"
                    android:paddingStart="18dip"
                    android:text="Processed by HoD"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    card_view:layout_constraintBottom_toBottomOf="parent"
                    card_view:layout_constraintStart_toStartOf="parent"
                    card_view:layout_constraintTop_toBottomOf="@+id/textView12" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="165dp"
                    android:layout_height="match_parent"
                    android:background="@color/LightGray"
                    android:padding="4dip"
                    android:paddingStart="18dip"
                    android:text="Pending "
                    android:textColor="@color/DarkerGray"
                    android:textSize="16sp"
                    card_view:layout_constraintStart_toStartOf="parent"
                    card_view:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_processed_LWP"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:padding="4dip"
                    android:paddingStart="18dip"
                    android:text="Total"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    card_view:layout_constraintBottom_toBottomOf="parent"
                    card_view:layout_constraintEnd_toEndOf="parent"
                    card_view:layout_constraintHorizontal_bias="0.0"
                    card_view:layout_constraintStart_toEndOf="@+id/textView13"
                    card_view:layout_constraintTop_toBottomOf="@+id/tv_pending_LWP"
                    card_view:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/tv_pending_LWP"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:padding="4dip"
                    android:paddingStart="18dip"
                    android:text="Total "
                    android:textColor="@color/DarkerGray"
                    android:textSize="16sp"
                    card_view:layout_constraintEnd_toEndOf="parent"
                    card_view:layout_constraintHorizontal_bias="0.0"
                    card_view:layout_constraintStart_toEndOf="@+id/textView12"
                    card_view:layout_constraintTop_toTopOf="parent" />


            </android.support.constraint.ConstraintLayout>


            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDarkTR"
                android:gravity="center"
                android:padding="4dip"
                android:text="Summer Leaves"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintHorizontal_bias="0.0"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toBottomOf="@+id/tv_pending_LWP" />

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="165dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimaryTR"
                    android:padding="4dip"
                    android:paddingStart="18dip"
                    android:text="Processed by HoD"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    card_view:layout_constraintBottom_toBottomOf="parent"
                    card_view:layout_constraintStart_toStartOf="parent"
                    card_view:layout_constraintTop_toBottomOf="@+id/textView15" />

                <TextView
                    android:id="@+id/tv_processed_SL"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:padding="4dip"
                    android:paddingStart="18dip"
                    android:text="Total"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    card_view:layout_constraintBottom_toBottomOf="parent"
                    card_view:layout_constraintEnd_toEndOf="parent"
                    card_view:layout_constraintHorizontal_bias="0.0"
                    card_view:layout_constraintStart_toEndOf="@+id/textView16"
                    card_view:layout_constraintTop_toBottomOf="@+id/tv_pending_SL"
                    card_view:layout_constraintVertical_bias="1.0" />

                <TextView
                    android:id="@+id/tv_pending_SL"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:padding="4dip"
                    android:paddingStart="18dip"
                    android:text="Total "
                    android:textColor="@color/DarkerGray"
                    android:textSize="16sp"
                    card_view:layout_constraintEnd_toEndOf="parent"
                    card_view:layout_constraintHorizontal_bias="0.0"
                    card_view:layout_constraintStart_toEndOf="@+id/textView15"
                    card_view:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="165dp"
                    android:layout_height="match_parent"
                    android:background="@color/LightGray"
                    android:padding="4dip"
                    android:paddingStart="18dip"
                    android:text="Pending "
                    android:textColor="@color/DarkerGray"
                    android:textSize="16sp"
                    card_view:layout_constraintStart_toStartOf="parent"
                    card_view:layout_constraintTop_toTopOf="parent" />


            </android.support.constraint.ConstraintLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>