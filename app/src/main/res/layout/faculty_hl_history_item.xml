<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app2="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical"
    app:ignore="NamespaceTypo">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_leaveTypIHL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDarkTR"
                android:gravity="center"
                android:padding="4dip"
                android:text="Leave Type"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/txtI_Leave_StatusIHL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dip"
                android:text="Leave Status"
                android:textColor="@color/DarkerGray"
                android:textSize="16sp"
                android:textStyle="bold" />

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/LighterGray">

                <TextView
                    android:id="@+id/hdLeaveBDateIHL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dip"
                    android:text="Leave Date:"
                    android:textColor="@color/DarkerGray"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/hdLeaveTypeIHL"
                    card_view:layout_constraintStart_toStartOf="parent"
                    card_view:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/hdLeaveEDateIHL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dip"
                    android:text="Beginning Time:"
                    android:textColor="@color/DarkerGray"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/hdLeaveBDateIHL"
                    card_view:layout_constraintStart_toStartOf="parent"
                    card_view:layout_constraintTop_toBottomOf="@+id/hdLeaveBDateIHL" />

                <TextView
                    android:id="@+id/hdLeaveETimeIHL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dip"
                    android:text="Ending Time:"
                    android:textColor="@color/DarkerGray"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/hdLeaveEDateIHL"
                    card_view:layout_constraintStart_toStartOf="parent"
                    card_view:layout_constraintTop_toBottomOf="@+id/hdLeaveEDateIHL" />

                <TextView
                    android:id="@+id/hdLeaveC_OptIHL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dip"
                    android:text="Managing Method:"
                    android:textColor="@color/DarkerGray"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/hdLeaveETimeIHL"
                    card_view:layout_constraintStart_toStartOf="parent"
                    card_view:layout_constraintTop_toBottomOf="@+id/hdLeaveETimeIHL" />

                <TextView
                    android:id="@+id/hdCommentsIHL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dip"
                    android:text="Comments:"
                    android:textColor="@color/DarkerGray"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvLeave_C_OptIHL"
                    card_view:layout_constraintBottom_toBottomOf="parent"
                    card_view:layout_constraintStart_toStartOf="parent"
                    card_view:layout_constraintTop_toBottomOf="@+id/hdLeaveC_OptIHL" />

                <TextView
                    android:id="@+id/tvLeave_DateIHL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dip"
                    android:textColor="@color/DarkerGray"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@+id/hdLeaveBDateIHL"
                    app:layout_constraintStart_toEndOf="@+id/hdLeaveBDateIHL"
                    app:layout_constraintTop_toTopOf="@+id/hdLeaveBDateIHL"
                    app:layout_constraintVertical_bias="0.0"
                    card_view:layout_constraintBottom_toBottomOf="@+id/hdLeaveBDateIHL"
                    card_view:layout_constraintStart_toEndOf="@+id/hdLeaveBDateIHL"
                    card_view:layout_constraintTop_toTopOf="@+id/hdLeaveBDateIHL" />

                <TextView
                    android:id="@+id/tvLeave_BTimeIHL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dip"
                    android:textColor="@color/DarkerGray"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@+id/hdLeaveEDateIHL"
                    app:layout_constraintStart_toEndOf="@+id/hdLeaveEDateIHL"
                    app:layout_constraintTop_toTopOf="@+id/hdLeaveEDateIHL"
                    card_view:layout_constraintBottom_toBottomOf="@+id/hdLeaveEDateIHL"
                    card_view:layout_constraintStart_toEndOf="@+id/hdLeaveEDateIHL"
                    card_view:layout_constraintTop_toTopOf="@+id/hdLeaveEDateIHL" />

                <TextView
                    android:id="@+id/tvLeave_ETimeIHL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dip"
                    android:textColor="@color/DarkerGray"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@+id/hdLeaveETimeIHL"
                    app:layout_constraintStart_toEndOf="@+id/hdLeaveETimeIHL"
                    app:layout_constraintTop_toBottomOf="@+id/hdLeaveEDateIHL"
                    app:layout_constraintVertical_bias="0.0"
                    card_view:layout_constraintBottom_toBottomOf="@+id/hdLeaveETimeIHL"
                    card_view:layout_constraintStart_toEndOf="@+id/hdLeaveETimeIHL"
                    card_view:layout_constraintTop_toTopOf="@+id/hdLeaveETimeIHL" />

                <TextView
                    android:id="@+id/tvLeave_C_OptIHL"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="8dip"
                    android:textColor="@color/DarkerGray"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@+id/hdLeaveC_OptIHL"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/hdLeaveC_OptIHL"
                    app:layout_constraintTop_toBottomOf="@+id/hdLeaveETimeIHL"
                    app:layout_constraintVertical_bias="0.0"
                    card_view:layout_constraintBottom_toBottomOf="@+id/hdLeaveC_OptIHL"
                    card_view:layout_constraintEnd_toEndOf="parent"
                    card_view:layout_constraintHorizontal_bias="0.0"
                    card_view:layout_constraintStart_toEndOf="@+id/hdLeaveC_OptIHL"
                    card_view:layout_constraintTop_toTopOf="@+id/hdLeaveC_OptIHL" />

                <TextView
                    android:id="@+id/tvCommentsIHL"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="8dip"
                    android:textColor="@color/DarkerGray"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@+id/hdCommentsIHL"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/hdCommentsIHL"
                    app:layout_constraintTop_toTopOf="@+id/hdCommentsIHL"
                    app:layout_constraintVertical_bias="0.0"
                    card_view:layout_constraintBottom_toBottomOf="@+id/hdCommentsIHL"
                    card_view:layout_constraintEnd_toEndOf="parent"
                    card_view:layout_constraintStart_toEndOf="@+id/hdCommentsIHL"
                    card_view:layout_constraintTop_toTopOf="@+id/hdCommentsIHL" />

            </android.support.constraint.ConstraintLayout>

            <TextView
                android:id="@+id/txtI_Leave_ApprovalStatusIHL"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:padding="4dip"
                android:text="Leave Approval Status"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/txtI_app_timeIHL"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="5dip"
                android:text="Applying time"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp" />

        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>